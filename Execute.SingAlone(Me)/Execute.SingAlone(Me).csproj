<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Execute.SingAlone_Me_</RootNamespace>
    <AssemblyName>Execute.SingAlone(Me)</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- Assembly info is auto-generated; no AssemblyInfo.cs needed -->
  </PropertyGroup>

  <ItemGroup>
    <!-- NAudio for audio support -->
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="Terminal.Gui" Version="2.*" />
  </ItemGroup>

  <ItemGroup>
    <!-- Optional configuration file -->
    <None Include="App.config" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- All *.cs files in the folder are included automatically -->
</Project>
